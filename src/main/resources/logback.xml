<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">

    <contextName>WebFrame</contextName>
    <!--日志存放的路径,默认为TomCat下面的logs-->
    <property name="USER_HOME" value="D:/LogBack/Log"/>

    <!--输出到窗口-->
    <appender name="SystemOut" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread]%date{HH:mm:ss.SSS}-%-5level%logger->%method:%msg%n</pattern>
        </encoder>
        <target>System.out</target>
    </appender>

    <!--输出到文件-->
    <appender name="LogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--按天分文件夹存放,并压缩-->
            <fileNamePattern>
                D:/LogBack/Log/%d{YYYY-MM-dd}/log.%i.txt
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!--每个文件的最大值5MB,超过则编号,生成新文件-->
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!--例如,假设每天滚动,且maxHistory是6,则只保留最近6月的归档文件,删除之前的文件-->
            <maxHistory>2</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                [%thread]%date{HH:mm:ss.SSS}-%-5level%logger->%method:%msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="SystemOut"/>
        <appender-ref ref="LogFile"/>
    </root>

    <logger name="java.sql.Connection" level="INFO"/>
    <logger name="java.sql.Statement" level="INFO"/>
    <logger name="java.sql.PreparedStatement" level="INFO"/>
    <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="INFO"/>

    <logger name="java.sql" level="INFO">
        <appender-ref ref="SystemOut"/>
    </logger>

</configuration>